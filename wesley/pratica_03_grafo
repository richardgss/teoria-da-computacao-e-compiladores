#include <stdio.h>

void informa_distancias(int grafo[4][4]) {
/*    
    for(int i=0; i<4; i++) {
        for (int x=0; x<4; x++) {
            printf("Informe a distancia entre as cidades [%d, %d]:\n", i, x);
            scanf("%d", &grafo[i][x]);
        }
    }
*/

    // Debug only
    grafo[0][0] = 0;
    grafo[0][1] = 4;
    grafo[0][2] = 0;
    grafo[0][3] = 5;
    grafo[1][0] = 4;
    grafo[1][1] = 0;
    grafo[1][2] = 2;
    grafo[1][3] = 4;
    grafo[2][0] = 0;
    grafo[2][1] = 2;
    grafo[2][2] = 0;
    grafo[2][3] = 3;
    grafo[3][0] = 5;
    grafo[3][1] = 4;
    grafo[3][2] = 3;
    grafo[3][3] = 0;
}

int qtde_estradas(int grafo[4][4]) {
    int qtd = 0;
    for (int i=0; i<4; i++) {
        for (int x=0; x<4; x++) {
            if (grafo[i][x] > 0) {
                qtd++;
            }
        }
    }
    return qtd;
}

void imprime_matriz(int grafo[4][4]) {
    for (int i=0; i<4; i++) {
        printf("[");
        for (int x=0; x<4; x++) {
            printf("%d%s", grafo[i][x], x < 4 - 1 ? ", " : "");
        }
        printf("]\n");
    }
}

int main() {
    int grafo[4][4];
    
    informa_distancias(grafo);
    int qtd = qtde_estradas(grafo);
    imprime_matriz(grafo);
    
    printf("Qtde de estradas: %d\n", qtd);
    
    return 0;
}
